<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title><%=title%></title>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.2/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="./../../main.css">
</head>
<body>
    
    <nav class="bg-primary">
        <div class="container py-3 d-flex gap-3 justify-content-between align-items-center">
            <h1 class="mb-0 text-white">ToDo</h1>
            <a href="/todo" class="btn btn-outline-light">ToDo</a>
        </div>
    </nav>

    <div class="container py-5">
        <form action="#" method="POST" class="d-flex gap-3 flex-column">
            <div>
                <label for="title">Title</label>
                <input type="text" name="title" id="title" value="<%=todo.title%>" class="form-control" required/> 
            </div>

            <div>
                <label for="body">Body</label>
                <input type="text" name="body" id="body" value="<%=todo.body%>" class="form-control" /> 
            </div>

            <button id="editBlog" data-doc="<%=todo.id%>" class="btn btn-primary">Submit</button>
        </form>
    </div>

<%- include('./partials/footer') %>

    <script>
        const editBlog = document.getElementById('editBlog');

        const id = editBlog.dataset.doc;

        editBlog.addEventListener('click', (e)=>{
            e.preventDefault();
            console.log("click");

            const endPoint = `/todo/edit-todo/${id}`;

            async function postEdit(){
                try{
                    const resolve = await fetch(endPoint, {
                    method: 'PUT',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        title: document.getElementById('title').value,
                        body: document.getElementById('body').value
                    })
                })
                const data = await resolve.json();

                window.location.href = data.redirect;
                }
                catch(e){
                    console.log(e);
                }
                }
            postEdit();
           
        })
    </script>

</body>
</html>