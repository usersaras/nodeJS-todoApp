<%- include('./partials/header') %>
<body>
    <nav class="bg-primary">
        <div class="container py-3 d-flex gap-3 justify-content-between align-items-center">
            <h1 class="mb-0 text-white">ToDo</h1>
            <a href="/todo" class="btn btn-outline-light">ToDo</a>
        </div>
    </nav>
    <div class="container">
        <form action="/todo/add-todo" method="POST" class="d-flex flex-column gap-3">

            <div>
            <label for="title">Title</label>
            <input type="text" name="title" id="title" class="form-control" required/>
            </div>

        <div>
            <label for="body" class="mt-0">Body</label>
            <textarea name="body" id="body" rows="8" class="form-control"></textarea>
        </div>

     
            <input type="hidden" name="completed" id="completed" value="0">

            <button class="btn btn-primary">Submit</button>
        </form>
    </div>
    <%- include('./partials/footer') %> 

</body>
</html>